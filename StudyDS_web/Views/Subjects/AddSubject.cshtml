@model Subject

<h3>New Subject</h3>
<br />

<form method="post" asp-action="addSubject">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="PriorityLevel" class="col-form-label"></label>
        </div>        
        <div class="col-6">
            <input type="range" asp-for="PriorityLevel" class="form-range" min="0" max="2" step="1" id="customRange3">
        </div>        
        <div class="col">
            <span class="text-danger" asp-validation-for="PriorityLevel"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Ects" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Ects" class="form-control" min="1" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="UserId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="UserId" class="form-control" min="1" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="UserId"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn-group btn-primary" value="Submit" />
        </div>
    </div>
</form>