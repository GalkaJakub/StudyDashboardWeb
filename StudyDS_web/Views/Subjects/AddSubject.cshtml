
@model Subject


<form method="post" asp-action="addSubject">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label">Nazwa</label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control" required />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="PriorityLevel" class="col-form-label">Priorytet</label>
        </div>
        <div class="col-5">
            <input type="range" asp-for="PriorityLevel" class="form-range" min="0" max="2" step="1" id="priorityRange" oninput="updatePriorityValue(this.value)" />
        </div>
        <div class="col-2">
            <span id="priorityValue" class="fw-bold"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Ects" class="col-form-label">Ilość ECTS</label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Ects" class="form-control" min="1" required />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn-group btn-primary" value="Submit" />
        </div>
    </div>
</form>
