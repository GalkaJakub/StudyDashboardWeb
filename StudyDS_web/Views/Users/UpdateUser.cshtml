@{
    ViewData["Title"] = "Moje konto";
}
@model User

<h3>Moje konto</h3>
<br />
<form method="post" asp-action="UpdateUser">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Password" />
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label">Login</label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Email" class="col-form-label">Adres Email</label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <button type="submit" class="btn btn-outline-primary">Zapisz</button>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-outline-secondary">Zmień hasło</a>
        </div>
    </div>

</form>