@model User
<h3>Logowanie</h3>

<form method="post" action="Login">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3 row">
        <div class="col-3">
            <label class="col-form-label">Podaj login</label>
        </div>
        <div class="col-6">
            <input asp-for="Name" type="text" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-3">
            <label class="col-form-label">Podaj Hasło</label>
        </div>
        <div class="col-6">
            <input asp-for="Password" type="password" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn-group btn-primary" value="Zaloguj" />
        </div>
    </div>
</form>
